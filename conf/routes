# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /github                     controllers.GitHubController.index()
GET     /github/users/:login        controllers.GitHubController.getGitHubUser(login: String)

POST    /github/create              controllers.GitHubController.create()
GET     /github/:login              controllers.GitHubController.read(login: String)
PUT     /github/:login              controllers.GitHubController.update(login: String)
DELETE  /github/:login              controllers.GitHubController.delete(login: String)