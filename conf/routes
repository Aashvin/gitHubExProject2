# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /                     controllers.GitHubController.index()

POST    /create              controllers.GitHubController.create()
GET     /read/:login              controllers.GitHubController.read(login: String)
PUT     /update/:login              controllers.GitHubController.update(login: String)
DELETE  /delete/:login              controllers.GitHubController.delete(login: String)
GET     /addgithubuser/:login       controllers.GitHubController.createFromGitHub(login: String)

GET     /github/users/:login        controllers.GitHubController.getGitHubUser(login: String)
GET     /github/users/:login/repos  controllers.GitHubController.getGitHubUserRepos(login: String)